# Legal Simulation Platform - Environment Configuration

# Application Settings
APP_NAME=legal-sim
APP_VERSION=0.1.0
ENVIRONMENT=mvp  # mvp, production, enterprise
MODE=demonstrative  # sandbox, demonstrative

# API Gateway
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Service URLs (for service discovery)
API_GATEWAY_URL=http://localhost:8000
EVIDENCE_URL=http://localhost:8001
STORYBOARD_URL=http://localhost:8002
TIMELINE_URL=http://localhost:8003
RENDER_URL=http://localhost:8004

# Service Ports
API_GATEWAY_PORT=8000
EVIDENCE_PORT=8001
STORYBOARD_PORT=8002
TIMELINE_PORT=8003
RENDER_PORT=8004

# Service Names
API_GATEWAY_NAME=api-gateway
EVIDENCE_NAME=evidence-processor
STORYBOARD_NAME=storyboard-service
TIMELINE_NAME=timeline-compiler
RENDER_NAME=render-orchestrator

# Database
DATABASE_URL=postgresql://legal_sim:password@localhost:5432/legal_sim
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Storage (MinIO for MVP)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=legal-sim-evidence
MINIO_SECURE=false

# Storage (S3 for Production)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=legal-sim-evidence

# Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cerbos (RBAC)
CERBOS_ENDPOINT=http://localhost:3593
CERBOS_POLICY_DIR=config/rbac-policies

# OPA (Policy Engine)
OPA_ENDPOINT=http://localhost:8181
OPA_POLICY_DIR=config/policy-packs

# Temporal (Workflow Engine)
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=legal-sim

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=legal-sim
OTEL_SERVICE_VERSION=0.1.0

# Evidence Processing
OCR_ENGINE=tesseract_local
ASR_ENGINE=whisperx_local
NLP_ENGINE=blackstone
MAX_UPLOAD_MB=100

# Rendering
RENDER_ENGINE=blender_local
RENDER_WORKERS=4
RENDER_TIMEOUT=3600

# Determinism
DETERMINISM_SEED=42
DETERMINISM_ENABLED=true

# Security
ENCRYPTION_KEY=your-encryption-key-change-in-production
SIGNING_KEY=your-signing-key-change-in-production

# Development
DEBUG=true
LOG_LEVEL=INFO
RELOAD=true

# External Services
WHISPER_MODEL=base
TESSERACT_LANG=eng
BLENDER_VERSION=4.0

# Feature Flags
ENABLE_AGENTS=false
ENABLE_GPU_RENDERING=false
ENABLE_DISTRIBUTED_PROCESSING=false
ENABLE_ENTERPRISE_FEATURES=false
